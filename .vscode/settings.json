{
  "[css][dockercompose][javacript][javascriptreact][json][typescript][typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[github-actions-workflow][yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "darkriszty.markdown-table-prettify"
  },
  "[nginx]": {
    "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[sh]": {
    "editor.defaultFormatter": "timonwong.shellcheck"
  },
  "css.lint.unknownAtRules": "ignore",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.formatDocument": "explicit"
  },
  "editor.detectIndentation": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "markdownlint.config": {
    "MD013": {
      "line_length": 120
    },
    "MD026": {
      "punctuation": ".,;!"
    },
    "MD033": {
      "allowed_elements": [
        "img"
      ]
    }
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
}
