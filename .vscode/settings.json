{
	"biome.lsp.bin": "./frontend/node_modules/@biomejs/biome/bin/biome",
	"biome.suggestInstallingGlobally": false,
	"css.lint.unknownAtRules": "ignore",
	"editor.detectIndentation": true,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"git.autofetch": true,
	"python.analysis.typeCheckingMode": "basic",
	"python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
	"python.terminal.activateEnvironment": true,
	"shellcheck.customArgs": ["-x"],
	"terminal.integrated.scrollback": 10000,
	"[css][dockercompose][javacript][javascriptreact][json][jsonc][typescript][typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[dockercompose]": {
		"editor.defaultFormatter": "SashaBusinaro.yaml-compose-sorter"
	},
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-containers"
	},
	"[github-actions-workflow][yaml]": {
		"editor.defaultFormatter": "redhat.vscode-yaml"
	},
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	"[markdown]": {
		"editor.defaultFormatter": "darkriszty.markdown-table-prettify"
	},
	"[nginx]": {
		"editor.defaultFormatter": "ahmadalli.vscode-nginx-conf"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"[sh]": {
		"editor.defaultFormatter": "timonwong.shellcheck"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.formatDocument": "explicit"
	},
	"markdownlint.config": {
		"MD013": {
			"line_length": 120
		},
		"MD026": {
			"punctuation": ".,;!"
		},
		"MD033": {
			"allowed_elements": ["img"]
		}
	}
}
