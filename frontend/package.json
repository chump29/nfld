{
  "author": "Chris Post",
  "description": "NFL team schedule picker (Frontend)",
  "homepage": "https://github.com/chump29/nfld",
  "keywords": [
    "NFL",
    "team",
    "schedule"
  ],
  "license": "GPL-3.0-only",
  "name": "nfld-frontend",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chump29/nfld.git"
  },
  "type": "module",
  "version": "1.2.0",
  "scripts": {
    "build": "vite build",
    "build:dev": "vite",
    "clean": "rimraf dist node_modules",
    "lint": "pnpm run lint:biome && pnpm run lint:html && pnpm run lint:css && pnpm run lint:md",
    "lint:biome": "biome check --write --verbose",
    "lint:ci": "biome ci --verbose --reporter=default --reporter=github && pnpm run lint:html && stylelint **/*.css --formatter verbose --ignore-path ../.gitignore && markdownlint-cli2 **/*.md",
    "lint:css": "stylelint **/*.css --fix --formatter verbose --ignore-path ../.gitignore",
    "lint:html": "html-validator --exclude=dist --ignore-config=.htmlignore",
    "lint:md": "markdownlint-cli2 --fix ../**/**/*.md",
    "nolyfill": "nolyfill install",
    "preinstall": "npx only-allow pnpm",
    "prepare": "cd .. && husky frontend/.husky",
    "test": "vitest run",
    "test:dev": "vitest"
  },
  "lint-staged": {
    "*.{js,json,ts,tsx,yaml}": "biome ci --no-errors-on-unmatched",
    "*.css": [
      "biome ci --no-errors-on-unmatched",
      "stylelint"
    ],
    "*.html": "html-validator --ignore-config=.htmlignore",
    "*.md": "markdownlint-cli2"
  },
  "markdownlint-cli2": {
    "config": {
      "MD013": {
        "line_length": 120
      },
      "MD026": {
        "punctuation": ".,;!"
      },
      "MD033": {
        "allowed_elements": [
          "img"
        ]
      }
    },
    "fix": true,
    "gitignore": true,
    "outputFormatters": [
      [
        "markdownlint-cli2-formatter-pretty"
      ]
    ]
  },
  "dependencies": {
    "axios": "^1.13.5",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "react": "^19.2.4",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.21.0",
    "markdownlint-cli2-formatter-pretty": "^0.0.9",
    "nolyfill": "^1.0.44",
    "rimraf": "^6.1.3",
    "sharp": "^0.34.5",
    "stylelint": "^17.3.0",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-package-version": "^1.1.0",
    "vite-plugin-simple-html": "^1.1.0",
    "vitest": "^4.0.18",
    "w3c-html-validator": "^2.2.0"
  },
  "engineStrict": true,
  "engines": {
    "node": "~24",
    "pnpm": "~10"
  },
  "packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "es-set-tostringtag": "npm:@nolyfill/es-set-tostringtag@^1",
      "hasown": "npm:@nolyfill/hasown@^1",
      "safer-buffer": "npm:@nolyfill/safer-buffer@^1",
      "side-channel": "npm:@nolyfill/side-channel@^1"
    }
  }
}
